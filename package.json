{
    "name": "@sellerspot/universal-functions",
    "version": "1.5.9",
    "description": "Contains all common functions and values shared across all applications in the SellerSpot ecosystem.",
    "main": "dist/index.js",
    "scripts": {
        "dev": "webpack --mode development --env development",
        "debug": "rm -rf dist/ && tsc-watch --onSuccess 'yalc push --no-scripts'",
        "build": "webpack --mode production --env production",
        "build:dev": "webpack --mode development --env production && yalc push --no-scripts",
        "lint": "eslint src",
        "lint:fix": "eslint src --fix",
        "yalc:link": "yalc link @sellerspot/universal-types",
        "yalc:remove": "yalc remove --all",
        "prettier": "prettier --write src",
        "lint-staged": "lint-staged",
        "husky:install": "husky install",
        "husky:pre-commit": "npm run lint-staged",
        "prepare": "npm run husky:install",
        "update:packages": "npm install @sellerspot/universal-types"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/SellerSpot/universal-functions.git"
    },
    "keywords": [
        "sellerspot",
        "universal-functions"
    ],
    "author": "RohitRajP",
    "contributors": [
        {
            "name": "Rohit Raj",
            "email": "rij7u7d@gmail.com",
            "url": "https://github.com/RohitRajP"
        },
        {
            "name": "ThayalanGR",
            "email": "grthayalan18@gmail.com",
            "url": "https://github.com/ThayalanGR"
        },
        {
            "name": "Immanuel Irwin",
            "email": "noelimmanuel1998@gmail.com",
            "url": "https://github.com/noelimmi"
        }
    ],
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/SellerSpot/universal-functions/issues"
    },
    "homepage": "https://github.com/SellerSpot/universal-functions#readme",
    "lint-staged": {
        "*.{ts,tsx,less}": [
            "prettier --write",
            "git add"
        ],
        "*.{ts,tsx}": "eslint --fix --max-warnings 0"
    },
    "devDependencies": {
        "@types/cookie": "^0.4.0",
        "@types/cookie-parser": "^1.4.2",
        "@types/cors": "^2.8.10",
        "@types/express": "^4.17.11",
        "@types/jsonwebtoken": "^8.5.1",
        "@types/morgan": "^1.9.2",
        "@types/webpack": "4.41.25",
        "@types/webpack-node-externals": "^2.5.0",
        "@typescript-eslint/eslint-plugin": "^4.10.0",
        "@typescript-eslint/parser": "^4.10.0",
        "clean-webpack-plugin": "^3.0.0",
        "eslint": "^7.16.0",
        "eslint-config-prettier": "^7.1.0",
        "eslint-plugin-import": "^2.22.1",
        "eslint-plugin-prettier": "^3.3.0",
        "express": "*",
        "fork-ts-checker-webpack-plugin": "^6.0.7",
        "husky": "^6.0.0",
        "joi": "^17.4.0",
        "lint-staged": "^10.5.4",
        "prettier": "^2.2.1",
        "ts-loader": "^8.0.12",
        "ts-node": "^9.1.1",
        "tsc-watch": "^4.2.9",
        "typescript": "^4.1.3",
        "webpack": "^4.46.0",
        "webpack-cli": "^4.2.0",
        "webpack-node-externals": "^2.5.2",
        "webpack-shell-plugin-next": "^1.2.0",
        "yalc": "^1.0.0-pre.50"
    },
    "dependencies": {
        "@sellerspot/universal-types": "^1.8.6",
        "cookie-parser": "^1.4.5",
        "cors": "^2.8.5",
        "jsonwebtoken": "^8.5.1",
        "morgan": "^1.10.0",
        "winston": "^3.3.3"
    },
    "peerDependencies": {
        "express": "^4.17.1"
    }
}
